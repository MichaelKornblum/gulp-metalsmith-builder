.site-header
  display: flex
  flex-direction: row
  background-color: #333
  margin 0
  padding 0 1em
  box-sizing border-box
  height: 4em;
  h1
    flex 9
    line-height 1
    margin 0
    padding 0
    color white
    font-size 1.25em
    margin-top 1.25em
  ul
    display: none
    +above(600px)
      flex 9
      display flex
      flex-direction row
  li
    display: none
    +above(600px)
      flex 2
      display inline-block
      margin 0
      padding 0
      line-height 1
      text-align center
