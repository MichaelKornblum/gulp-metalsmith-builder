.site-nav
  background-color: #333
  box-sizing: border-box
  width: 100
  max-width 400px
  min-height 100%
  position: absolute
  top: 0
  left: 0
  z-index: 1
  transform: translateX(-100%)
  transition: transform 0.6s ease
  h1, h2, h3, li, a
    color white
  &.is-opened
    transform: translateX(0)
  h1, h2, li
    padding-left: 1em
  header
    display: flex
    background-color: #222
    height 4em
    h1
      flex 7
      color: white
      margin-top 1em
      margin-right .1em
      line-height 1
    svg
      height 2.25em
      width 2.25em
      flex 2
      stroke white
      fill white
      position absolute
      top 0
      right .125em
