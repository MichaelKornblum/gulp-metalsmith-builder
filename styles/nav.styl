.site-nav
  background-color: #333
  box-sizing: border-box
  width: 100
  max-width 400px
  min-height 100%
  position: absolute
  top: 0
  left: 0
  z-index: 1
  transform: translateX(-100%)
  transition: transform 0.6s ease
  &.is-opened
    transform: translateX(0)
  header
    display: flex
    background-color: #222
    height 4em
    padding 0 .5em
    margin-bottom .75em
    h2
      font-size 1.5em
      flex 7
      color: white
      position: relative
      top: -1.3em
    svg
      height 2.25em
      width 2.25em
      flex 2
      stroke white
      fill white
      position relative
      top 0
      right -1.5em
      &:hover
        fill orange
        stroke orange
  div
    padding 0 1em
    h1, h2, h3, h4, li, a
      color: white
    .site-pages, .site-categories
      padding 0
      list-style-type none
      .icon
        position relative
        top .1em
        height 1.5em
        width 1.5em
        &.active
          fill orange
          stroke orange
  .site-latest li
    margin-bottom: vr-block(.5)
  .site-categories
    position relative
    top -1em
  a
    text-decoration none
    &:hover
      color: orange
