@lost gutter 1em;
@import 'typographic'
@import 'rupture'

$header-ratio = $minor-third
$line-height-ratio = 1.5
$header-font = $calibri
$body-font = $calibri
$min-font = 18px
$max-font = 24px

typographic()

.container
  lost-utility clearfix

.page-header
  lost-column 1/3
  box-sizing border-box
  padding 0 1em
  background-color tomato
  color white
  h1, h2, h3, h4
    color white

  li, a
    color yellow
  a
    text-decoration none
    &:hover
      color white
  +below(768px)
    lost-column 3/3
    margin-top 0
    padding-top 0
    h1
      margin-top .4em
      lost-column 8/10

main
  lost-column 2/3
  box-sizing border-box
  padding 0 1em
  +below(768px)
    lost-column 3/3

.toggle
  height 1.5em
  width 2em
  display block
  padding 0
  lost-grid 2/10
  float right
  position relative
  top .75em
  background-color tomato
  border none
  border-top 3px solid white
  border-bottom 3px solid white
  +above(768px)
    display none
  span
    display block
    height 3px
    background-color white
    width 100%


.page-footer
  lost-column: 4/4
