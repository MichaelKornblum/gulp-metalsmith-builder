@lost gutter 1em
@import 'typographic'
@import 'rupture'

$min-font = 18px
$max-font = 20px
$line-height-ratio = 1.5
$header-ratio = $golden
$header-color = $white
$body-font = $calibri
$header-font = $calibri
$header-font-weight = 100
$min-font = 16px
$max-font = 18px


typographic()

body {
  width 100%
}

header
  lost-column 35/100
  background: tomato
  color: white
  box-sizing border-box
  padding-left: 1em;
  +below(900px)
    lost-column 3/3
  li
    list-style-type none
  a
    text-decoration none
    color yellow

main
  lost-column 65/100
  +below(900px)
    lost-column 3/3
