@lost gutter 1em;
@import 'typographic'
@import 'rupture'

$header-ratio = $major-third
$line-height-ratio = 1.75
$header-font = $garamond
$body-font = $garamond
$min-font = 16px
$max-font = 24px

typographic()



.container
  lost-utility clearfix

.page-header h1, main h2
  +above(768px)
    margin-top 16px
    padding-top 0

.page-header
  lost-column 1/3
  box-sizing border-box
  padding 0 .5em
  background-color tomato
  color white
  h1, h2, h3, h4
    color white
  li, a
    color yellow
  a
    text-decoration none
    &:hover
      color white
  +below(725px)
    lost-column 3/3
    margin-top 0
    padding-top 0
    h1
      margin-top .4em
      lost-column 8/10

main
  lost-column 2/3
  box-sizing border-box
  padding 0 1em
  +below(725px)
    lost-column 3/3

.toggle
  height 1.5em
  width 2em
  display block
  padding 0
  lost-grid 2/10
  float right
  position relative
  top .95em
  background-color tomato
  border none
  border-top 3px solid white
  border-bottom 3px solid white
  +above(725px)
    display none
  span
    display block
    height 3px
    background-color white
    width 100%

.page-nav
  +below(725px)
    opacity 0
    max-height 0
    overflow hidden
    line-height 2.5
    transition all 0.6s ease

    &.open
      opacity 1
      max-height 3999px




.page-footer
  lost-column: 4/4
